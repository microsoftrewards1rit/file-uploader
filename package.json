{
  "name": "file-uploader",
  "version": "1.0.0",
  "description": "A folder management app with authenticated sessions and public sharing.",
  "main": "dist/app.js",
  "scripts": {
    "prebuild": "npm run migrate && npm run generate",
    "build": "npm run clean && npx tsc && npm run copy && npm run bundle",
    "bundle": "npx rollup -c",
    "clean": "rm -rf ./dist",
    "copy": "cp -r ./src/views ./dist/",
    "generate": "npx prisma generate",
    "migrate": "npx prisma db push",
    "start": "node dist/app.js",
    "dev": "npx tsx watch --env-file=.env src/app.ts",
    "debug": "DEBUG=express:* npx tsx watch src/app.ts",
    "test": "npx vitest run",
    "test:watch": "npx vitest",
    "test:coverage": "npx vitest run --coverage",
    "lint": "eslint src --ignore-path .gitignore",
    "lint:fix": "eslint src --fix --ignore-path .gitignore",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\""
  },
  "keywords": [
    "file upload",
    "folder management"
  ],
  "author": "astroflexx",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "@quixo3/prisma-session-store": "^3.1.13",
    "@shoelace-style/shoelace": "^2.16.0",
    "@supabase/supabase-js": "^2.45.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "memory-cache": "^0.2.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/http-errors": "^2.0.4",
    "@types/memory-cache": "^0.2.6",
    "@types/method-override": "^0.0.35",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.12",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "base64-arraybuffer": "^1.0.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.9.2",
    "module-alias": "^2.2.3",
    "prettier": "^3.4.2",
    "rollup": "^4.34.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-css-only": "^4.5.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "tsx": "^4.16.2",
    "typescript": "^5.7.3",
    "vitest": "^2.0.4",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "_moduleAliases": {
    "@": "./dist"
  }
}
